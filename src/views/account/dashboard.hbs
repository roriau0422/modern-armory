<div class="container py-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>{{__ "dashboard.title"}}</h1>
                <div class="text-muted">
                    {{__ "dashboard.welcome_back"}} <strong>{{user.username}}</strong>!
                </div>
            </div>
        </div>
    </div>

    <!-- Account Statistics -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-users text-primary fs-1 mb-3"></i>
                    <h3 class="text-primary">{{stats.characterCount}}</h3>
                    <p class="text-muted mb-0">{{__ "dashboard.characters"}}</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-crown text-warning fs-1 mb-3"></i>
                    <h3 class="text-warning">{{stats.maxLevel}}</h3>
                    <p class="text-muted mb-0">{{__ "dashboard.highest_level"}}</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-clock text-info fs-1 mb-3"></i>
                    <h3 class="text-info">{{formatPlaytime stats.totalPlaytime}}</h3>
                    <p class="text-muted mb-0">{{__ "dashboard.total_playtime"}}</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Account Information -->
    <div class="row mb-4">
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-user me-2"></i>{{__ "dashboard.account_information"}}
                    </h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">{{__ "dashboard.username"}}</dt>
                        <dd class="col-sm-8">{{user.username}}</dd>
                        
                        <dt class="col-sm-4">{{__ "dashboard.email"}}</dt>
                        <dd class="col-sm-8">{{user.email}}</dd>
                        
                        <dt class="col-sm-4">{{__ "dashboard.joined"}}</dt>
                        <dd class="col-sm-8">{{formatDate user.joindate}}</dd>
                        
                        <dt class="col-sm-4">{{__ "dashboard.expansion"}}</dt>
                        <dd class="col-sm-8">
                            {{#if (eq user.expansion 2)}}
                                <span class="badge bg-info">Wrath of the Lich King</span>
                            {{else if (eq user.expansion 1)}}
                                <span class="badge bg-success">The Burning Crusade</span>
                            {{else}}
                                <span class="badge bg-secondary">Classic</span>
                            {{/if}}
                        </dd>
                    </dl>
                </div>
                <div class="card-footer bg-light">
                    <a href="/account/settings" class="btn btn-primary btn-sm">
                        <i class="fas fa-cog me-1"></i>{{__ "dashboard.account_settings"}}
                    </a>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-bolt me-2"></i>{{__ "dashboard.quick_actions"}}
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="/account/characters" class="btn btn-outline-primary">
                            <i class="fas fa-users me-2"></i>{{__ "dashboard.view_my_characters"}}
                        </a>
                        <a href="/search" class="btn btn-outline-info">
                            <i class="fas fa-search me-2"></i>{{__ "dashboard.search_characters"}}
                        </a>
                        <a href="/ladder" class="btn btn-outline-warning">
                            <i class="fas fa-trophy me-2"></i>{{__ "dashboard.view_ladder"}}
                        </a>
                        <a href="/online" class="btn btn-outline-success">
                            <i class="fas fa-circle me-2"></i>{{__ "dashboard.online_players"}}
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Characters Overview -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="fas fa-users me-2"></i>{{__ "dashboard.my_characters"}}
                    </h5>
                    <a href="/account/characters" class="btn btn-outline-light btn-sm">{{__ "dashboard.view_all"}}</a>
                </div>
                <div class="card-body p-0">
                    {{#if characters.length}}
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>{{__ "dashboard.name"}}</th>
                                        <th>{{__ "dashboard.level"}}</th>
                                        <th>{{__ "dashboard.class"}}</th>
                                        <th>{{__ "dashboard.race"}}</th>
                                        <th>{{__ "dashboard.playtime"}}</th>
                                        <th>{{__ "dashboard.status"}}</th>
                                        <th>{{__ "dashboard.actions"}}</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each characters}}
                                    <tr>
                                        <td>
                                            <strong>{{name}}</strong>
                                        </td>
                                        <td>
                                            <span class="badge bg-primary">{{level}}</span>
                                        </td>
                                        <td>{{className class}}</td>
                                        <td>{{raceName race}}</td>
                                        <td>{{formatPlaytime totaltime}}</td>
                                        <td>
                                            {{#if online}}
                                                <span class="badge bg-success">{{__ "dashboard.online"}}</span>
                                            {{else}}
                                                <span class="badge bg-secondary">{{__ "dashboard.offline"}}</span>
                                            {{/if}}
                                        </td>
                                        <td>
                                            <a href="/character/{{name}}" class="btn btn-outline-primary btn-sm">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="/account/character/{{guid}}" class="btn btn-outline-info btn-sm">
                                                <i class="fas fa-cog"></i>
                                            </a>
                                        </td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    {{else}}
                        <div class="p-4 text-center text-muted">
                            <i class="fas fa-user-plus fs-1 mb-3 opacity-50"></i>
                            <h5>{{__ "dashboard.no_characters_title"}}</h5>
                            <p>{{__ "dashboard.no_characters_description"}}</p>
                        </div>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</div>