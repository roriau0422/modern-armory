<div class="hero-section bg-primary text-white py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h1 class="display-4 fw-bold mb-3">{{__ "home.welcome_title" siteName=siteName}}</h1>
                <p class="lead mb-4" style="color: white;">{{__ "home.welcome_subtitle"}}</p>
                <div class="d-flex gap-3">
                    {{#unless user}}
                    <a href="/auth/register" class="btn btn-light btn-lg">
                        <i class="fas fa-user-plus me-2"></i>{{__ "home.join_now"}}
                    </a>
                    {{/unless}}
                    <a href="/search" class="btn btn-outline-light btn-lg">
                        <i class="fas fa-search me-2"></i>{{__ "home.search_characters"}}
                    </a>
                </div>
            </div>
            <div class="col-lg-4 text-center">
                <i class="fas fa-dragon display-1 opacity-50"></i>
            </div>
        </div>
    </div>
</div>

<div class="container py-5">
    <!-- Server Statistics -->
    <div class="row mb-5">
        <div class="col-12">
            <h2 class="text-center mb-4">{{__ "home.server_statistics"}}</h2>
        </div>
        <div class="col-md-3">
            <div class="card text-center border-0 shadow-sm">
                <div class="card-body">
                    <i class="fas fa-users text-primary fs-1 mb-3"></i>
                    <h3 class="text-primary">{{stats.totalCharacters}}</h3>
                    <p class="text-muted mb-0">{{__ "home.total_characters"}}</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center border-0 shadow-sm">
                <div class="card-body">
                    <i class="fas fa-circle text-success fs-1 mb-3"></i>
                    <h3 class="text-success">{{stats.onlineCharacters}}</h3>
                    <p class="text-muted mb-0">{{__ "home.players_online"}}</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center border-0 shadow-sm">
                <div class="card-body">
                    <i class="fas fa-crown text-warning fs-1 mb-3"></i>
                    <h3 class="text-warning">{{stats.maxLevel}}</h3>
                    <p class="text-muted mb-0">{{__ "home.max_level"}}</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center border-0 shadow-sm">
                <div class="card-body">
                    <i class="fas fa-chart-line text-info fs-1 mb-3"></i>
                    <h3 class="text-info">{{stats.averageLevel}}</h3>
                    <p class="text-muted mb-0">{{__ "home.average_level"}}</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Top Characters -->
        <div class="col-lg-6 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-trophy me-2"></i>{{__ "home.top_characters"}}
                    </h5>
                </div>
                <div class="card-body p-0">
                    {{#if topCharacters.length}}
                        <div class="list-group list-group-flush">
                            {{#each topCharacters}}
                            <div class="list-group-item d-flex align-items-center">
                                <div class="me-3">
                                    <span class="badge bg-secondary fs-6" style="color: white !important;">#{{@index}}</span>
                                </div>
                                <div class="flex-grow-1">
                                    <a href="/character/{{name}}" class="text-decoration-none fw-bold">{{name}}</a>
                                    <div class="small text-muted">
                                        {{__ "home.level"}} {{level}} {{className class}} {{raceName race}}
                                        {{#if online}}<span class="text-success">‚óè {{__ "home.online_status"}}</span>{{/if}}
                                    </div>
                                </div>
                                <div class="text-end">
                                    <span class="badge bg-primary">{{level}}</span>
                                </div>
                            </div>
                            {{/each}}
                        </div>
                    {{else}}
                        <div class="p-4 text-center text-muted">
                            <i class="fas fa-users fs-1 mb-3 opacity-50"></i>
                            <p>{{__ "home.no_characters_found"}}</p>
                        </div>
                    {{/if}}
                </div>
                <div class="card-footer bg-light">
                    <a href="/ladder" class="btn btn-primary btn-sm">
                        <i class="fas fa-eye me-1"></i>{{__ "home.view_full_ladder"}}
                    </a>
                </div>
            </div>
        </div>

        <!-- Online Characters -->
        <div class="col-lg-6 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-circle me-2"></i>{{__ "home.online_players"}}
                    </h5>
                </div>
                <div class="card-body p-0">
                    {{#if onlineCharacters.length}}
                        <div class="list-group list-group-flush">
                            {{#each onlineCharacters}}
                            <div class="list-group-item d-flex align-items-center">
                                <div class="flex-grow-1">
                                    <a href="/character/{{name}}" class="text-decoration-none fw-bold">{{name}}</a>
                                    <div class="small text-muted">
                                        {{__ "home.level"}} {{level}} {{className class}} {{raceName race}}
                                    </div>
                                </div>
                                <div class="text-end">
                                    <span class="badge bg-success">{{__ "home.online_status"}}</span>
                                </div>
                            </div>
                            {{/each}}
                        </div>
                    {{else}}
                        <div class="p-4 text-center text-muted">
                            <i class="fas fa-moon fs-1 mb-3 opacity-50"></i>
                            <p>{{__ "home.no_players_online"}}</p>
                        </div>
                    {{/if}}
                </div>
                <div class="card-footer bg-light">
                    <a href="/online" class="btn btn-success btn-sm">
                        <i class="fas fa-eye me-1"></i>{{__ "home.view_all_online"}}
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Search -->
    <div class="row mt-5">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center py-5">
                    <h3 class="mb-4">{{__ "home.find_character"}}</h3>
                    <form action="/search" method="GET" class="row justify-content-center">
                        <div class="col-md-6">
                            <div class="input-group input-group-lg">
                                <input type="text" name="q" class="form-control" placeholder="{{__ "home.enter_character_name"}}" required>
                                <button class="btn btn-primary" type="submit">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>