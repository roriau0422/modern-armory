<div class="container py-4">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4">
                <i class="fas fa-circle text-success me-2"></i>{{__ "online.title"}}
            </h1>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="fas fa-users me-2"></i>{{__ "online.currently_online"}}
                    </h5>
                    <span class="badge bg-light text-dark">{{characters.length}} {{__ "online.players"}}</span>
                </div>
                <div class="card-body p-0">
                    {{#if characters.length}}
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>{{__ "online.character"}}</th>
                                        <th>{{__ "online.level"}}</th>
                                        <th>{{__ "online.class"}}</th>
                                        <th>{{__ "online.race"}}</th>
                                        <th>{{__ "online.zone"}}</th>
                                        <th>{{__ "online.actions"}}</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each characters}}
                                    <tr>
                                        <td>
                                            <strong><a href="/character/{{name}}" class="text-decoration-none">{{name}}</a></strong>
                                            <span class="badge bg-success ms-2">
                                                <i class="fas fa-circle me-1"></i>{{__ "online.online"}}
                                            </span>
                                        </td>
                                        <td>
                                            <span class="badge bg-primary">{{level}}</span>
                                        </td>
                                        <td>
                                            <span data-class="{{class}}">{{className class}}</span>
                                        </td>
                                        <td>{{raceName race}}</td>
                                        <td>
                                            <small class="text-muted">Zone {{zone}}</small>
                                        </td>
                                        <td>
                                            <a href="/character/{{name}}" class="btn btn-outline-primary btn-sm">
                                                <i class="fas fa-eye me-1"></i>{{__ "online.view_profile"}}
                                            </a>
                                        </td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    {{else}}
                        <div class="p-5 text-center text-muted">
                            <i class="fas fa-moon fs-1 mb-3 opacity-50"></i>
                            <h5>{{__ "online.no_players_online"}}</h5>
                            <p class="mb-0">{{__ "online.no_players_description"}}</p>
                            <p class="small">{{__ "online.check_back_later"}}</p>
                        </div>
                    {{/if}}
                </div>
                {{#if characters.length}}
                <div class="card-footer bg-light">
                    <div class="d-flex justify-content-between align-items-center">
                        <small class="text-muted">
                            <i class="fas fa-sync me-1"></i>{{__ "online.updates_automatically"}}
                        </small>
                        <div>
                            <a href="/ladder" class="btn btn-outline-primary btn-sm me-2">
                                <i class="fas fa-trophy me-1"></i>{{__ "online.view_ladder"}}
                            </a>
                            <a href="/search" class="btn btn-outline-info btn-sm">
                                <i class="fas fa-search me-1"></i>{{__ "online.search_characters"}}
                            </a>
                        </div>
                    </div>
                </div>
                {{/if}}
            </div>
        </div>
    </div>

    <!-- Quick Stats -->
    {{#if characters.length}}
    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm text-center">
                <div class="card-body">
                    <i class="fas fa-users text-success fs-1 mb-2"></i>
                    <h4 class="text-success">{{characters.length}}</h4>
                    <small class="text-muted">{{__ "online.players_online"}}</small>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm text-center">
                <div class="card-body">
                    <i class="fas fa-crown text-warning fs-1 mb-2"></i>
                    <h4 class="text-warning">
                        {{#each characters}}
                            {{#if @first}}{{level}}{{/if}}
                        {{/each}}
                    </h4>
                    <small class="text-muted">{{__ "online.highest_level_online"}}</small>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm text-center">
                <div class="card-body">
                    <i class="fas fa-chart-line text-info fs-1 mb-2"></i>
                    <h4 class="text-info">
                        {{#math characters "avg" "level"}}{{/math}}
                    </h4>
                    <small class="text-muted">{{__ "online.average_level"}}</small>
                </div>
            </div>
        </div>
    </div>
    {{/if}}
</div>

<script>
// Apply class colors after page load
document.addEventListener('DOMContentLoaded', function() {
    if (window.ModernArmory && window.ModernArmory.classColors) {
        const classElements = document.querySelectorAll('[data-class]');
        classElements.forEach(element => {
            const classId = parseInt(element.dataset.class);
            if (window.ModernArmory.classColors[classId]) {
                element.style.color = window.ModernArmory.classColors[classId];
                element.style.fontWeight = 'bold';
            }
        });
    }

    // Auto-refresh online players every 30 seconds
    setInterval(function() {
        window.location.reload();
    }, 30000);
});
</script>