<div class="container py-4">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4">
                <i class="fas fa-trophy text-warning me-2"></i>{{__ "ladder.title"}}
            </h1>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-warning text-dark d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="fas fa-medal me-2"></i>{{__ "ladder.top_characters"}}
                    </h5>
                    <span class="badge bg-dark">{{__ "ladder.top"}} {{characters.length}}</span>
                </div>
                <div class="card-body p-0">
                    {{#if characters.length}}
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>{{__ "ladder.rank"}}</th>
                                        <th>{{__ "ladder.character"}}</th>
                                        <th>{{__ "ladder.level"}}</th>
                                        <th>{{__ "ladder.class"}}</th>
                                        <th>{{__ "ladder.race"}}</th>
                                        <th>{{__ "ladder.status"}}</th>
                                        <th>{{__ "ladder.playtime"}}</th>
                                        <th>{{__ "ladder.actions"}}</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each characters}}
                                    <tr {{#if (eq @index 0)}}class="table-warning"{{else if (eq @index 1)}}class="table-light"{{else if (eq @index 2)}}class="table-light"{{/if}}>
                                        <td>
                                            {{#if (eq @index 0)}}
                                                <span class="badge bg-warning text-dark fs-6">
                                                    <i class="fas fa-crown me-1"></i>#{{math @index "+" 1}}
                                                </span>
                                            {{else if (eq @index 1)}}
                                                <span class="badge bg-secondary fs-6">
                                                    <i class="fas fa-medal me-1"></i>#{{math @index "+" 1}}
                                                </span>
                                            {{else if (eq @index 2)}}
                                                <span class="badge bg-warning text-dark fs-6">
                                                    <i class="fas fa-medal me-1"></i>#{{math @index "+" 1}}
                                                </span>
                                            {{else}}
                                                <span class="badge bg-primary">#{{math @index "+" 1}}</span>
                                            {{/if}}
                                        </td>
                                        <td>
                                            <strong><a href="/character/{{name}}" class="text-decoration-none">{{name}}</a></strong>
                                        </td>
                                        <td>
                                            <span class="badge bg-primary fs-6">{{level}}</span>
                                        </td>
                                        <td>
                                            <span data-class="{{class}}">{{className class}}</span>
                                        </td>
                                        <td>{{raceName race}}</td>
                                        <td>
                                            {{#if online}}
                                                <span class="badge bg-success">
                                                    <i class="fas fa-circle me-1"></i>{{__ "ladder.online"}}
                                                </span>
                                            {{else}}
                                                <span class="badge bg-secondary">
                                                    <i class="fas fa-circle me-1"></i>{{__ "ladder.offline"}}
                                                </span>
                                            {{/if}}
                                        </td>
                                        <td>
                                            <small class="text-muted">
                                                {{formatPlaytime totaltime}}
                                            </small>
                                        </td>
                                        <td>
                                            <a href="/character/{{name}}" class="btn btn-outline-primary btn-sm">
                                                <i class="fas fa-eye me-1"></i>{{__ "ladder.view"}}
                                            </a>
                                        </td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    {{else}}
                        <div class="p-5 text-center text-muted">
                            <i class="fas fa-trophy fs-1 mb-3 opacity-50"></i>
                            <h5>{{__ "ladder.no_characters_found"}}</h5>
                            <p class="mb-0">{{__ "ladder.no_characters_description"}}</p>
                        </div>
                    {{/if}}
                </div>
                {{#if characters.length}}
                <div class="card-footer bg-light">
                    <div class="d-flex justify-content-between align-items-center">
                        <small class="text-muted">
                            <i class="fas fa-info-circle me-1"></i>{{__ "ladder.ranked_by"}}
                        </small>
                        <div>
                            <a href="/online" class="btn btn-outline-success btn-sm me-2">
                                <i class="fas fa-circle me-1"></i>{{__ "ladder.online_players"}}
                            </a>
                            <a href="/search" class="btn btn-outline-info btn-sm">
                                <i class="fas fa-search me-1"></i>{{__ "ladder.search_characters"}}
                            </a>
                        </div>
                    </div>
                </div>
                {{/if}}
            </div>
        </div>
    </div>

    <!-- Ladder Statistics -->
    {{#if characters.length}}
    <div class="row mt-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm text-center">
                <div class="card-body">
                    <i class="fas fa-crown text-warning fs-1 mb-2"></i>
                    <h4 class="text-warning">
                        {{#each characters}}
                            {{#if @first}}{{level}}{{/if}}
                        {{/each}}
                    </h4>
                    <small class="text-muted">{{__ "ladder.max_level"}}</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm text-center">
                <div class="card-body">
                    <i class="fas fa-users text-primary fs-1 mb-2"></i>
                    <h4 class="text-primary">{{characters.length}}</h4>
                    <small class="text-muted">{{__ "ladder.total_ranked"}}</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm text-center">
                <div class="card-body">
                    <i class="fas fa-circle text-success fs-1 mb-2"></i>
                    <h4 class="text-success">
                        {{#math characters "count" "online" true}}{{/math}}
                    </h4>
                    <small class="text-muted">{{__ "ladder.online_now"}}</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm text-center">
                <div class="card-body">
                    <i class="fas fa-chart-line text-info fs-1 mb-2"></i>
                    <h4 class="text-info">
                        {{#math characters "avg" "level"}}{{/math}}
                    </h4>
                    <small class="text-muted">{{__ "ladder.average_level"}}</small>
                </div>
            </div>
        </div>
    </div>
    {{/if}}
</div>

<script>
// Apply class colors and playtime formatting
document.addEventListener('DOMContentLoaded', function() {
    if (window.ModernArmory && window.ModernArmory.classColors) {
        const classElements = document.querySelectorAll('[data-class]');
        classElements.forEach(element => {
            const classId = parseInt(element.dataset.class);
            if (window.ModernArmory.classColors[classId]) {
                element.style.color = window.ModernArmory.classColors[classId];
                element.style.fontWeight = 'bold';
            }
        });
    }
});

// Helper function to format playtime
function formatPlaytime(seconds) {
    if (!seconds) return '0h 0m';
    const hours = Math.floor(seconds / 3600);
    const minutes = Math.floor((seconds % 3600) / 60);
    const days = Math.floor(hours / 24);
    
    if (days > 0) {
        return `${days}d ${hours % 24}h`;
    } else if (hours > 0) {
        return `${hours}h ${minutes}m`;
    } else {
        return `${minutes}m`;
    }
}
</script>